# Template file for 'SDRangel'
pkgname=SDRangel
version=3.5.0
revision=1
short_desc='Rx/Tx software for many SDR hardware platforms.'
homepage='https://github.com/f4exb/sdrangel'
license="GPL-3"
hostmakedepends="cmake pkg-config nanomsg LimeSuite"
depends="LimeSuite nanomsg qt5"
makedepends="
LimeSuite pkg-config nanomsg cm256cc pulseaudio-devel
libstdc++-devel qt5-devel libopencv-devel libusb-devel
alsa-lib-devel fftw-devel libgcc libGL sqlite-devel
qt5-multimedia qt5-multimedia-devel boost-devel"
build_style=cmake
distfiles="https://github.com/f4exb/sdrangel/archive/v${version}.tar.gz>${pkgname}-${version}.tar.gz"
